@model  List<MVCApp.ChatService.Chat>

@{
    ViewBag.Title = "Chat";
    ViewBag.Content = "";//dong chat hien tai
}

<h2>Chat</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <h4>Day la view chat</h4>
        <hr />
        <div class="form-group">
            <div class="col-md-10">
                <input type="text" name="Content" placeholder="Enter your chat">
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Chat" class="btn btn-default" />
            </div>
        </div>
        <table>
            <tr>
                <th>User name</th>
                <th>Content</th>
            </tr>
            @foreach (var chat in Model)
            {
                if (chat.UserName.Equals((string)Session["UserName"]))
                {
                    <tr>
                        <td>@chat.UserName</td>
                        <td>@chat.Content</td>
                    </tr>
                }
                else {
                <tr>
                    <td>@chat.Content</td>
                    <td>@chat.UserName</td>
                </tr>
                }

            }

        </table>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
